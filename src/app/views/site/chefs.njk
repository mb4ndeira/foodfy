{% extends "./layout.njk" %}

{% block h %}
    <a href="/about">Sobre</a>
    <a href="/recipes">Receitas</a>
    <a href="/chefs" class="active">Chefs</a>
{% endblock h %}

{% block c %}
    <section class="chefs site">
        {% for item in items %}
            <div class="chef_container container" id="{{item.id}}">
                <div class="container_image">
                    {% for avatar in avatars %}
                        {% if avatar.id == item.file_id %}
                            <img src="{{avatar.src}}" alt="">
                        {% endif %}
                    {% endfor %}

                </div>
                <div class="container_text">
                    <h3>{{item.name}}</h3>
                    <span>{{item.count}}
                        Receitas</span>
                </div>
            </div>
        {% endfor %}
    </section>
</div>

{% endblock %}