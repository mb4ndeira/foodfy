{% extends "../layout.njk" %}

{%block h%}
    <a href="/admin/recipes" class="">RECEITAS</a>
    <a href="" class="active">CHEFS</a>
    <a href="/admin/users" class="">USU√ÅRIOS</a>
{% endblock %}

{% block c %}
    <div id="chefs_wrapper">
        <div class="head">
            <h1 id="maintitle">Chefs</h1>
            <a href="/admin/chefs/create" class="btn">Novo</a>
        </div>

        <section class="chefs">
            {% for item in items %}
                <div class="chef_container container" id="{{item.id}}">
                    <div class="container_image">
                        <img src="{{item.src}}" alt="">
                    </div>
                    <div class="container_text">
                        <h3>{{item.name}}</h3>
                        <a href="/admin/chefs/{{item.id}}">Visualizar</a>
                    </div>
                </div>
            {% endfor %}
        </section>
    </div>

{% endblock %}